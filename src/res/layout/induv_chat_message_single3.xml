<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/datet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#666666"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="" />

    <TextView
        android:layout_below="@+id/datet"
        android:id="@+id/text_message_body33"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:background="@drawable/bg_msg_from"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="15sp"
        android:layout_marginLeft="8dp" />

    <TextView
        android:layout_below="@+id/datet"
        android:id="@+id/text_message_bodyme33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:autoLink="web"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:maxWidth="240dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bg_msg_to"
        android:padding="8dp"
        android:text=""
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_message_time33"
        android:layout_width="wrap_content"
        android:autoLink="web"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_message_body33"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@+id/text_message_body33"
        android:layout_toRightOf="@+id/text_message_body33"
        android:text=""
        android:textSize="11sp"
        />
    <TextView
        android:id="@+id/text_message_timeme33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_message_bodyme33"
        android:layout_toLeftOf="@+id/text_message_bodyme33"
        android:layout_toStartOf="@+id/text_message_bodyme33"
        android:text=""
        android:textSize="11sp" />


    <ImageView
        android:layout_below="@+id/datet"
        android:id="@+id/message_image_layout33"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_below="@+id/datet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/message_image_layout_me33"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</RelativeLayout>