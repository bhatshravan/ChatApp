<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.GroupsListActivity">

    <include layout="@layout/indiv_chat_app_bar_layout" android:id="@+id/users_appBar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/users_list2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/users_appBar"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/group_new"
        android:onClick="BtnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/users_list2"
        android:layout_alignRight="@+id/users_list2"
        android:layout_alignEnd="@+id/users_list2"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_add_24dp"
        app:rippleColor="@color/black"
        app:fabSize="normal">

    </android.support.design.widget.FloatingActionButton>
</RelativeLayout>
